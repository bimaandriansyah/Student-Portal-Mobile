<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PengumumanActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/bg_top"/>

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_top"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_left"
                android:layout_gravity="left"
                android:layout_marginRight="120dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pengumuman"
                android:gravity="center"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/putih"
                android:textSize="20dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/isiProfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_menu"
        android:backgroundTint="@color/putih"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        android:elevation="3dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">
            <TableRow>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_kuesioner"
                    android:layout_gravity="center_vertical"
                    android:tint="@color/biru5"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:text="Semua Kategori"
                    android:textSize="18dp"
                    android:textColor="@color/biru5"
                    android:textStyle="bold"
                    android:padding="3dp"/>
                <TextView
                    android:id="@+id/txtNPM"
                    android:text="6"
                    android:layout_gravity="center_vertical|right"
                    android:background="@drawable/bg_nuom"
                    android:backgroundTint="@color/dasar"
                    android:textColor="@color/putih2"
                    android:textStyle="bold"
                    android:paddingTop="2dp"
                    android:paddingBottom="3dp"
                    android:paddingStart="7dp"
                    android:paddingEnd="7dp"
                    android:gravity="left"/>
            </TableRow>
            <TableRow
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_informasi"
                    android:layout_gravity="center_vertical"
                    android:tint="@color/biru5"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:text="Informasi"
                    android:textSize="18dp"
                    android:textColor="@color/biru5"
                    android:textStyle="bold"
                    android:padding="3dp"/>
                <TextView
                    android:id="@+id/txtNPM"
                    android:text="6"
                    android:layout_gravity="center_vertical|right"
                    android:background="@drawable/bg_nuom"
                    android:backgroundTint="@color/dasar"
                    android:textColor="@color/putih2"
                    android:textStyle="bold"
                    android:paddingTop="2dp"
                    android:paddingBottom="3dp"
                    android:paddingStart="7dp"
                    android:paddingEnd="7dp"
                    android:gravity="left"/>
            </TableRow>
            <TableRow
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_peringatan"
                    android:layout_gravity="center_vertical"
                    android:tint="@color/biru5"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:text="Peringatan"
                    android:textSize="18dp"
                    android:textColor="@color/biru5"
                    android:textStyle="bold"
                    android:padding="3dp"/>
                <TextView
                    android:id="@+id/txtNPM"
                    android:text="0"
                    android:layout_gravity="center_vertical|right"
                    android:background="@drawable/bg_nuom"
                    android:backgroundTint="@color/dasar"
                    android:textColor="@color/putih2"
                    android:textStyle="bold"
                    android:paddingTop="2dp"
                    android:paddingBottom="3dp"
                    android:paddingStart="7dp"
                    android:paddingEnd="7dp"
                    android:gravity="left"/>
            </TableRow>
            <TableRow
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_kuesioner"
                    android:layout_gravity="center_vertical"
                    android:tint="@color/biru5"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:text="Kuesioner"
                    android:textSize="18dp"
                    android:textColor="@color/biru5"
                    android:textStyle="bold"
                    android:padding="3dp"/>
                <TextView
                    android:id="@+id/txtNPM"
                    android:text="0"
                    android:layout_gravity="center_vertical|right"
                    android:background="@drawable/bg_nuom"
                    android:backgroundTint="@color/dasar"
                    android:textColor="@color/putih2"
                    android:textStyle="bold"
                    android:paddingTop="2dp"
                    android:paddingBottom="3dp"
                    android:paddingStart="7dp"
                    android:paddingEnd="7dp"
                    android:gravity="left"/>
            </TableRow>
            <TableRow
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_download"
                    android:layout_gravity="center_vertical"
                    android:tint="@color/biru5"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:text="Download"
                    android:textSize="18dp"
                    android:textColor="@color/biru5"
                    android:textStyle="bold"
                    android:padding="3dp"/>
                <TextView
                    android:id="@+id/txtNPM"
                    android:text="0"
                    android:layout_gravity="center_vertical|right"
                    android:background="@drawable/bg_nuom"
                    android:backgroundTint="@color/dasar"
                    android:textColor="@color/putih2"
                    android:textStyle="bold"
                    android:paddingTop="2dp"
                    android:paddingBottom="3dp"
                    android:paddingStart="7dp"
                    android:paddingEnd="7dp"
                    android:gravity="left"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragmentSub"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/isiProfil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>