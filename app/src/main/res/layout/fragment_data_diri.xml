<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragmentprofil.DataDiri">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/datadiri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/biru2"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/datadiri">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Data Diri"
                android:textStyle="bold"
                android:textColor="@color/biru5"
                android:textSize="17dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:gravity="right">
            </LinearLayout>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/datadiri">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/isiDataDiri"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/bg_menu"
                    android:elevation="2dp"
                    android:padding="10dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">
                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:stretchColumns="0,1,2">

                            <TableRow>

                                <TextView
                                    android:padding="3dp"
                                    android:text="NIK"
                                    android:textColor="@color/biru5"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txtNIK"
                                    android:gravity="left"
                                    android:padding="3dp"
                                    android:text="-"
                                    android:textColor="@color/biru5" />
                            </TableRow>

                            <TableRow>

                                <TextView
                                    android:padding="3dp"
                                    android:text="Nama Lengkap"
                                    android:textColor="@color/biru5"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txtNama"
                                    android:gravity="left"
                                    android:padding="3dp"
                                    android:text="-"
                                    android:textColor="@color/biru5" />
                            </TableRow>

                            <TableRow>
                                <TextView
                                    android:padding="3dp"
                                    android:text="Lahir"
                                    android:textColor="@color/biru5"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txtLahir"
                                    android:gravity="left"
                                    android:padding="3dp"
                                    android:text="-"
                                    android:textColor="@color/biru5" />
                            </TableRow>

                            <TableRow>

                                <TextView
                                    android:padding="3dp"
                                    android:text="Jenis Kelamin"
                                    android:textColor="@color/biru5"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txtJnsKelamin"
                                    android:gravity="left"
                                    android:padding="3dp"
                                    android:text="-"
                                    android:textColor="@color/biru5" />
                            </TableRow>

                            <TableRow>

                                <TextView
                                    android:padding="3dp"
                                    android:text="Agama"
                                    android:textColor="@color/biru5"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txtAgama"
                                    android:gravity="left"
                                    android:padding="3dp"
                                    android:text="-"
                                    android:textColor="@color/biru5" />
                            </TableRow>

                            <TableRow>

                                <TextView
                                    android:padding="3dp"
                                    android:text="Alamat Asal"
                                    android:textColor="@color/biru5"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="160dp"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/txtAlamatAsal"
                                    android:gravity="left"
                                    android:padding="3dp"
                                    android:text="-"
                                    android:textColor="@color/biru5" />
                            </TableRow>

                            <TableRow>

                                <TextView
                                    android:padding="3dp"
                                    android:text="Kota/Kab. Asal"
                                    android:textColor="@color/biru5"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txtKotaAsal"
                                    android:gravity="left"
                                    android:padding="3dp"
                                    android:text="-"
                                    android:textColor="@color/biru5" />
                            </TableRow>

                            <TableRow>

                                <TextView
                                    android:layout_marginRight="8dp"
                                    android:padding="3dp"
                                    android:text="Alamat Sekarang"
                                    android:textColor="@color/biru5"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="160dp"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/txtAlamat"
                                    android:gravity="left"
                                    android:padding="3dp"
                                    android:text="-"
                                    android:textColor="@color/biru5" />
                            </TableRow>

                            <TableRow>

                                <TextView
                                    android:padding="3dp"
                                    android:text="No. Handphone"
                                    android:textColor="@color/biru5"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txtNoHP"
                                    android:gravity="left"
                                    android:padding="3dp"
                                    android:text="-"
                                    android:textColor="@color/biru5" />
                            </TableRow>

                            <TableRow>

                                <TextView
                                    android:padding="3dp"
                                    android:text="Email"
                                    android:textColor="@color/biru5"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txtEmail"
                                    android:gravity="left"
                                    android:padding="3dp"
                                    android:text="-"
                                    android:textColor="@color/biru5" />
                            </TableRow>

                        </TableLayout>

                    </HorizontalScrollView>
                </LinearLayout>

                <Button
                    android:id="@+id/btnUbahDataDiri"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/isiDataDiri"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/bg_btlogin"
                    android:text="Ubah Data Diri"
                    android:textColor="@color/putih"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>