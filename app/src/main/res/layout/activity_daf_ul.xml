<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DafUlActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bg_top"/>

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_top"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_left"
                android:layout_gravity="left"
                android:layout_marginRight="120dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daftar Ulang"
                android:gravity="center"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/putih"
                android:textSize="20dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/isiDaFul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        android:orientation="vertical"
        android:background="@drawable/bg_menu"
        android:elevation="2dp"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data KRS"
            android:textColor="@color/biru5"
            android:textStyle="bold"
            android:textSize="16dp"
            android:background="@color/biru4"
            android:padding="10dp" />
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="0,1,2">

                <TableRow
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:background="@color/biru2">
                    <TextView
                        android:layout_width="30dp"
                        android:padding="3dp"
                        android:text="#"
                        android:layout_gravity="center"
                        android:textColor="@color/biru5"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="200dp"
                        android:padding="3dp"
                        android:text="Periode Akademik"
                        android:layout_gravity="center"
                        android:textColor="@color/biru5"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="150dp"
                        android:padding="3dp"
                        android:text="UKT"
                        android:layout_gravity="center"
                        android:textColor="@color/biru5"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="150dp"
                        android:padding="3dp"
                        android:text="Status"
                        android:layout_gravity="center"
                        android:textColor="@color/biru5"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="100dp"
                        android:padding="3dp"
                        android:text="Cetak KRS"
                        android:layout_gravity="center"
                        android:textColor="@color/biru5"
                        android:textStyle="bold" />
                </TableRow>
                <TableRow
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">
                    <TextView
                        android:padding="3dp"
                        android:text="1"
                        android:layout_gravity="center"
                        android:textColor="@color/biru5"
                        android:textStyle="bold" />
                    <TextView
                        android:padding="3dp"
                        android:text="2019/2020 Gasal"
                        android:layout_gravity="center"
                        android:textColor="@color/biru5"
                        android:textStyle="bold" />
                    <TextView
                        android:padding="3dp"
                        android:text="Rp. 2.500.000,-"
                        android:layout_gravity="center"
                        android:textColor="@color/biru5"
                        android:textStyle="bold" />
                    <TextView
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:text="Lunas"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_btlogin"
                        android:backgroundTint="#a7d176"
                        android:textColor="@color/putih"
                        android:textStyle="bold" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_print"
                        android:tint="@color/biru"/>
                </TableRow>
                <TableRow
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">
                    <TextView
                        android:padding="3dp"
                        android:text="2"
                        android:layout_gravity="center"
                        android:textColor="@color/biru5"
                        android:textStyle="bold" />
                    <TextView
                        android:padding="3dp"
                        android:text="2019/2020 Genap"
                        android:layout_gravity="center"
                        android:textColor="@color/biru5"
                        android:textStyle="bold" />
                    <TextView
                        android:padding="3dp"
                        android:text="Rp. 2.500.000,-"
                        android:layout_gravity="center"
                        android:textColor="@color/biru5"
                        android:textStyle="bold" />
                    <TextView
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:text="Lunas"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_btlogin"
                        android:backgroundTint="#a7d176"
                        android:textColor="@color/putih"
                        android:textStyle="bold" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_print"
                        android:tint="@color/biru"/>
                </TableRow>
                <TableRow
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">
                    <TextView
                        android:padding="3dp"
                        android:text="3"
                        android:layout_gravity="center"
                        android:textColor="@color/biru5"
                        android:textStyle="bold" />
                    <TextView
                        android:padding="3dp"
                        android:text="2020/2021 Gasal"
                        android:layout_gravity="center"
                        android:textColor="@color/biru5"
                        android:textStyle="bold" />
                    <TextView
                        android:padding="3dp"
                        android:text="Rp. 2.500.000,-"
                        android:layout_gravity="center"
                        android:textColor="@color/biru5"
                        android:textStyle="bold" />
                    <TextView
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:text="Lunas"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_btlogin"
                        android:backgroundTint="#a7d176"
                        android:textColor="@color/putih"
                        android:textStyle="bold" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_print"
                        android:tint="@color/biru"/>
                </TableRow>

            </TableLayout>

        </HorizontalScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>